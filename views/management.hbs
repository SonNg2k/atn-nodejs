<button id="createBtn" type="button" class="btn btn-warning mb-3" data-toggle="modal"
    data-target="#versatileModal">Create <i class="fas fa-plus"></i></button>
{{!-- Render components for /customers route --}}
{{#ifCond route "===" "customers"}}
    {{> customers-table clients=../clients}}
    {{> customers-versatile-modal}}
{{/ifCond}}
{{!-- Render components for /inventory route --}}
{{#ifCond route "===" "inventory"}}
    {{> inventory-table toys=../toys}}
    {{> inventory-versatile-modal}}
{{/ifCond}}
{{!-- Render #successAlert --}}
<div id="successAlert" class="alert alert-success fixed-top-center" role="alert">
    Operation completed successfully, yay ✅
</div>
{{!-- Render #failureAlert --}}
<div id="failureAlert" class="alert alert-danger fixed-top-center" role="alert">
    Operation failed ❌, please check if the inputs are entered correctly
</div>
{{!-- Render #deleteConfirmModal --}}
<div class="modal fade" id="deleteConfirmModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Are you sure?</h5>
                <button type="button" class="close" data-dismiss="modal">
                    <span>&times;</span>
                </button>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">No</button>
                <button id="deleteAcceptBtn" type="button" class="btn btn-success">Yes</button>
            </div>
        </div>
    </div>
</div>
